 <section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-white/20 border-x"
    x-data="{ init() {
        new Splide(this.$refs.splide, {
            perPage: 1, 
            gap: '1rem', 
            arrows: true, 
            breakpoints: {
                640: { perPage: 1 },
            },
        }).mount()
    } }">
    <section class="splide" x-ref="splide" id="splide01" aria-roledescription="carousel">
      <div class="splide__arrows splide__arrows--ltr items-center">
        <button class="splide__arrow splide__arrow--prev" type="button" aria-label="Previous slide"
          aria-controls="splide01-track">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="40" height="40" focusable="false">
            <path d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"></path>
          </svg>
        </button>
        <button class="splide__arrow splide__arrow--next" type="button" aria-label="Next slide"
          aria-controls="splide01-track">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="40" height="40" focusable="false">
            <path d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"></path>
          </svg>
        </button>
      </div>

      <div class="splide__track" id="splide01-track" style="padding-left: 0px; padding-right: 0px;">
        <ul class="splide__list" id="splide01-list" role="presentation">
          <li class="flex justify-center flex-col splide__slide" id="splide01-slide02" role="tabpanel"
            aria-roledescription="slide" aria-label="1 of 10">
            <Image src={Cadets1} alt="work" width={1200} height={700} class="w-full object-cover object-center bg-white border-t border-black lg:border-r"  />
          </li>

          <li class="flex justify-center flex-col splide__slide" id="splide01-slide02" role="tabpanel"
            aria-roledescription="slide" aria-label="2 of 10">
            <Image src={Cadets2} alt="work" width={1200} height={700} class="w-full object-cover object-center bg-white border-t border-black lg:border-r"/>
          </li>

          <li class="flex justify-center flex-col splide__slide" id="splide01-slide02" role="tabpanel"
            aria-roledescription="slide" aria-label="3 of 10">
            <Image src={Cadets3} alt="work" width={1200} height={700} class="w-full object-cover object-center bg-white border-t border-black lg:border-r" />
          </li>

          <li class="flex justify-center flex-col splide__slide" id="splide01-slide02" role="tabpanel"
            aria-roledescription="slide" aria-label="4 of 10">
            <Image src={Cadets4} alt="work" width={1200} height={700} class="w-full object-cover object-center bg-white border-t border-black lg:border-r" />
          </li>
        </ul>
      </div>
    </section>
  </div>
</section>
<br>
